<script>
'use strict';
$(() => {

  const a = $('#decisions_a');
  const b = $('#decisions_b');
  const c = $('#decisions_c');
  const partial = (i) => {
    return i.val().trim().length != 5;
  };
  const enable_scores = () => {
    $('#scores').prop('disabled', partial(a)||partial(b)||partial(c));
  };
  a.on('input', enable_scores);
  b.on('input', enable_scores);
  c.on('input', enable_scores);

});
</script>

